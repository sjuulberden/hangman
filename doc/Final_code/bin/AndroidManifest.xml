<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.apps.Hangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.mprog.apps.Hangman.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="nl.mprog.apps.Hangman.MainActivity"
      		android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="nl.mprog.apps.Hangman.GoodGameplayActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="nl.mprog.apps.Hangman.MainActivity">
        </activity>
        <activity android:name="nl.mprog.apps.Hangman.EvilGameplayActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="nl.mprog.apps.Hangman.MainActivity">
        </activity>
        <activity android:name="nl.mprog.apps.Hangman.PreferenceActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="nl.mprog.apps.Hangman.MainActivity">
        </activity>
        <activity android:name="nl.mprog.apps.Hangman.HighscoresActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="nl.mprog.apps.Hangman.MainActivity">
        </activity>
    </application>

</manifest>
